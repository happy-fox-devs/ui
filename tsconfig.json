{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    ".storybook/**/*",
    "src/**/*.mdx",
    "src/**/*.stories.@(js|jsx|mjs|ts|tsx)"
  ]
}
